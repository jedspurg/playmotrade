<% provide(:title, "Catalog") %>
<div class="content">
  <%= render "shared/sidebar" %>
    <div class="mainbar">
      <div class="page-head">
        <h2 class="pull-left">Catalog</h2>
        <div class="bread-crumb pull-right">
          <a href="/"><i class="icon-home"></i> Home</a>
          <span class="divider">/</span>
          <%= link_to "Catalog", catalog_index_path %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="matter">
        <div class="container-fluid">
          <div class="widget wviolet">
            <div class="widget-head">
              Recently Added Parts
              <div class="clearfix"></div>
            </div>
            <div class="widget-content padd">
              <div class="row-fluid">
                <% @recent_catalog_parts.each do |catalog_item| %>
                  <div class="span2">
                    <div class="widget wviolet">
                      <div class="widget-head widget-head-fixed">
                        <small><%= catalog_item.name %></small>
                        <div class="clearfix"></div>
                      </div>
                      <div class="widget-content">
                        <%= image_tag catalog_item.image.url(:medium), :class => 'catalog-img' %>
                        <div class="clearfix"></div>
                      </div>
                      <div class="widget-foot">
                        <p class="pull-left"><%= catalog_item.number %></p>
                        <%= link_to "View", catalog_part_path(catalog_item), :class => 'btn pull-right btn-danger' %>
                        <div class="clearfix"></div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="widget-foot">
              <%= link_to "View All Parts", catalog_parts_path, :class => 'btn pull-right' %>
              <div class="clearfix"></div>
            </div>
          </div>

          <div class="widget worange">
            <div class="widget-head">
              Recently Added Sets
              <div class="clearfix"></div>
            </div>
            <div class="widget-content padd">
              <div class="row-fluid">
                <% @recent_catalog_sets.each do |catalog_item| %>
                  <div class="span2">
                    <div class="widget worange">
                      <div class="widget-head widget-head-fixed">
                        <small><%= catalog_item.name %></small>
                        <div class="clearfix"></div>
                      </div>
                      <div class="widget-content">
                        <%= image_tag catalog_item.image.url(:medium), :class => 'catalog-img' %>
                        <div class="clearfix"></div>
                      </div>
                      <div class="widget-foot">
                        <p class="pull-left"><%= catalog_item.number %></p>
                        <%= link_to "View", catalog_part_path(catalog_item), :class => 'btn pull-right btn-danger' %>
                        <div class="clearfix"></div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="widget-foot">
              <%= link_to "View All Sets", catalog_sets_path, :class => 'btn pull-right' %>
              <div class="clearfix"></div>
            </div>
          </div>

        </div>
      </div>
    </div>
   <div class="clearfix"></div>
   <%= render 'shared/footer' %>
</div>
