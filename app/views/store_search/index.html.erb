<% provide(:title, "Search") %>
<div class="content">
  <%= render "shared/store_sidebar", locals: {store: @store} %>
    <div class="mainbar">
      <div class="page-head">
        <h2 class="pull-left">Search
        <div class="btn-group">
          <a data-type="" class="search-type btn <% if params[:type].blank? %>active<% end %>">All</a>
          <a data-type="set" class="search-type btn <% if params[:type] == "set" %>active<% end %>">Sets Only</a>
          <a data-type="part" class="search-type btn <% if params[:type] == "part" %>active<% end %>">Parts Only</a>
        </div>
        </h2>
        <div class="bread-crumb pull-right">
          <a href="/"><i class="icon-home"></i> Home</a>
          <span class="divider">/</span>
          <%= link_to "Search", store_search_index_path %>
        </div>
        <form id="search-type-form" method="get" action="/search">
          <input type="hidden" name="q" value="<%= params[:q] %>">
          <input id="search-type" type="hidden" name="type" value="">
        </form>
        <div class="clearfix"></div>
      </div>
      <div class="matter">
        <div class="container-fluid">
          <div class="widget-foot">
            <%= will_paginate @inventory_items, :class => 'pagination pull-right' %>
            <div class="clearfix"></div>
          </div>
          <% @inventory_items.in_groups_of(4, false) do |row| %>
            <div class="row-fluid">
              <% row.each do |inventory_item| %>
                <div class="span3">
                  <div class="widget wlightblue">
                    <div class="widget-head">
                      <h6><%= inventory_item.name %></h6>
                      <div class="clearfix"></div>
                    </div>
                    <div class="widget-content">
                      <%= image_tag inventory_item.image.url(:medium), :class => 'catalog-img' %>
                      <div class="clearfix"></div>
                    </div>
                    <div class="widget-foot">
                      <p class="pull-left"><%= inventory_item.number %></p>
                      <%= link_to "View", inventory_item_path(inventory_item), :class => 'btn pull-right btn-danger' %>
                      <div class="clearfix"></div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <div class="widget-foot">
            <%= will_paginate @inventory_items, :class => 'pagination pull-right' %>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
   <div class="clearfix"></div>
</div>
