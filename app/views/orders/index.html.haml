- provide(:title, "Orders")
.content
  - if @store.present?
    = render "shared/store_sidebar"
  - else
    = render "shared/sidebar"
  .mainbar
    .page-head
      %h2.pull-left
      Orders
      - if @store.present?
        = "in #{@store.name}"
      .bread-crumb.pull-right
        = link_to root_path do
          %i.icon-home
          Home
        %span.divider /
        = link_to "Orders", orders_path
      .clearfix
    .matter
      .container-fluid
        = render "shared/flash"
        .row-fluid
          .span12
            .widget.wblue
              .widget-head
                Open Orders
                .clearfix
              .widget-content
                %table.table.table-bordered.table-hover
                  %thead
                    %tr
                      %th Order ID
                      %th Status
                      %th Items
                      %th Subtotal
                      %th Shipping
                      %th Total
                    - @orders.each do |order|
                      = render "orders/shared/order_row", :order => order
              .widget-foot
                = will_paginate @orders, :class => 'pagination pull-right'
                .clearfix
  .clearfix
  = render 'shared/footer'
