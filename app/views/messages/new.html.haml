- provide(:title, "Send a Message")
.content
  = render "shared/sidebar"
  .mainbar
    .page-head
      %h2.pull-left
        Send a Message
      .bread-crumb.pull-right
        = link_to root_path do
          %i.icon-home
          Home
        %span.divider /
        = link_to 'Messages', messages_path
      .clearfix
    .matter
      .container-fluid
        = render "shared/flash"
        - if current_user.blank?
          .row-fluid
            .span12
              .alert.alert-error
                You must be logged in to send a message.
        - else
          .row-fluid
            .span12
              .widget.wred
                .widget-head
                  .pull-left New Message
                  .clearfix
                .widget-content
                  .padd
                    = render 'form'
  .clearfix
  = render 'shared/footer'

- content_for :script_files do
  = tinymce_assets
  = tinymce
