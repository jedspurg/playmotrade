- provide(:title, "Catalog Parts")
.content
  = render 'shared/sidebar'
  .mainbar
    .page-head
      %h2.pull-left Catalog Parts
      .bread-crumb.pull-right
        = link_to root_path do
          %i.icon-home Home
        %span.divider /
        = link_to "Catalog", catalog_index_path
        %span.divider /
        = link_to "Catalog Parts", catalog_parts_path
      .clearfix
    .matter
      .container-fluid
        .widget-foot
          = will_paginate @catalog_parts, :class => 'pagination pull-right'
          .clearfix
        - @catalog_parts.in_groups_of(6, false) do |row|
          .row-fluid
            - row.each do |catalog_part|
              .span2
                .widget.wlightblue
                  .widget-head.widget-head-fixed
                    %small= catalog_part.name
                    .clearfix
                  .widget-content.widget-content-fixed
                    = link_to catalog_part_path(catalog_part) do
                      = image_tag catalog_part.image.url(:medium), :class => 'catalog-img'
                    .clearfix
                  .widget-foot
                    %p.pull-left= catalog_part.number
                    = link_to "View", catalog_part_path(catalog_part), :class => 'btn pull-right btn-danger'
                    .clearfix
        .widget-foot
          = will_paginate @catalog_parts, :class => 'pagination pull-right'
          .clearfix
  .clearfix
  = render 'shared/footer'

