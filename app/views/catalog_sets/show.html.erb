<% provide(:title, "Catalog") %>
<div class="content">
  <%= render "shared/sidebar" %>
    <div class="mainbar">
      <div class="page-head">
        <h2 class="pull-left">Catalog</h2>
        <div class="bread-crumb pull-right">
          <a href="/"><i class="icon-home"></i> Home</a>
          <span class="divider">/</span>
          <%= link_to "Catalog", catalog_index_path %>
          <span class="divider">/</span>
          <%= link_to "Catalog Sets", catalog_sets_path %>
          <span class="divider">/</span>
          <%= link_to @catalog_set.number, catalog_set_path(@catalog_set) %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="matter">
        <div class="container-fluid">
          <%= render "shared/flash" %>
            <div class="row-fluid">
                <div class="span8">
                  <div class="widget wlightblue">
                    <div class="widget-head">
                      <div class="pull-left"><%= @catalog_set.name %></div>
                      <div class="pull-right"><%= @catalog_set.number %></div>
                      <div class="clearfix"></div>
                    </div>
                    <div class="widget-content">
                      <div class="row-fluid">
                        <div class="span6">
                          <%= image_tag @catalog_set.image.url(:large), :class => 'catalog-img' %>
                        </div>
                        <div class="span6">
                          <ul class="activity">
                            <li>
                              <strong>Theme:</strong> <%= @catalog_set.theme.to_s %>
                            </li>
                            <li>
                              <strong>Part Count:</strong> <%= @catalog_set.part_count.to_s %>
                            </li>
                            <li>
                              <strong>Figure Count:</strong> <%= @catalog_set.figure_count.to_s %>
                            </li>
                            <li>
                              <strong>Release Date:</strong> <%= @catalog_set.release_date.to_s %>
                            </li>
                            <li>
                              <strong>Retire Date:</strong> <%= @catalog_set.retire_date.to_s %>
                            </li>
                            <li>
                              <strong>Dimensions:</strong> <%= @catalog_set.dimensions.to_s %>
                            </li>
                            <li>
                              <strong>Weight:</strong> <%= @catalog_set.weight.to_s %>
                            </li>
                            <li>
                              <strong>Tags:</strong>
                              <% @catalog_set.tags.each do |tag| %>
                              <span class="label label-info"><%= tag.name %></span>
                              <% end %>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                  </div>
                </div>
                <div class="span4">
                  <%= render "catalog_sets/catalog_set_toolbar" %>
                </div>
                <%= render "shared/items_available" %>
            </div>
        </div>
      </div>
    </div>
   <div class="clearfix"></div>
</div>

<div id="addToInventory" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="inventory-header" aria-hidden="false">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="inventory-header">Add Part To Store Inventory</h3>
  </div>
  <%= form_for(@store_inventory_set, :url => add_set_to_inventory_path(current_user.store, @catalog_set)) do |f| %>
  <div class="modal-body">
    <div class="control-group">
      <label class="control-label" for="quantity">Quantity</label>
      <div class="controls">
        <%= f.text_field :quantity, :class => "input-large" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="price">Price</label>
      <div class="controls">
        <%= f.text_field :price, :class => "input-large", :placeholder => "USD" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="condition">Condition</label>
      <div class="controls">
        <%= f.select(:condition, options_for_select(StoreInventorySet::CONDITIONS, "New (Sealed)")) %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="comment">Comment</label>
      <div class="controls">
        <%= f.text_area :comment, :class => "input-large" %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-success pull-left">Advanced Form</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" type="submit">Add to Inventory</button>
  </div>
  <% end %>
</div>

<%= render 'shared/wishlist_modal', :item_id => @catalog_set.id, :item_type => @catalog_set.class.name.underscore %>
