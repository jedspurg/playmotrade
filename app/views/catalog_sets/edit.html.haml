- provide(:title, "Edit Catalog Set")
.content
  = render "shared/sidebar"
  .mainbar
    .page-head
      %h2.pull-left Edit Catalog Set
      .bread-crumb.pull-right
        = link_to root_path do
          %i.icon-home
          Home
        %span.divider /
        = link_to "Catalog", catalog_index_path
        %span.divider /
        = link_to "Catalog Sets", catalog_sets_path
        %span.divider /
        = link_to @catalog_set.number, catalog_set_path(@catalog_set)
      .clearfix
    .matter
      .container-fluid
        = render "shared/flash"
        .row-fluid
          .span3
            .widget.wlightblue
              .widget-head
                .pull-left= @catalog_set.number.to_s
                .clearfix
              .widget-content
                = image_tag @catalog_set.image.url(:large), :class => 'catalog-img'
                %ul.activity
                  %li
                    %strong Name:
                    = @catalog_set.name.to_s
                  %li
                    %strong Number:
                    = @catalog_set.number.to_s
                  %li
                    %strong Theme:
                    = @catalog_set.theme.to_s
                  %li
                    %strong Part Count:
                    = @catalog_set.part_count.to_s
                  %li
                    %strong Figure Count:
                    = @catalog_set.figure_count.to_s
                  %li
                    %strong Release Date:
                    = @catalog_set.release_date.to_s
                  %li
                    %strong Retire Date:
                    = @catalog_set.retire_date.to_s
                  %li
                    %strong Dimensions:
                    = @catalog_set.dimensions.to_s
                  %li
                    %strong Weight:
                    = @catalog_set.weight.to_s
                  %li
                    %strong Tags:
                    - @catalog_set.tags.each do |tag|
                      %span.label.label-info= tag.name
          .span9
            .widget.worange
              .widget-head
                .pull-left Edit Catalog Set
                .clearfix
              .widget-content
                .padd
                  .form.quick-post
                    = form_for @catalog_set, :class => "form-horizontal", :multipart => true do |f|
                      .control-group
                        %label.control-label{:for => "image"} Image
                        .controls
                          = f.file_field :image
                      .control-group
                        %label.control-label{:for => "back_image"} Back Image
                        .controls
                          = f.file_field :back_image
                      .control-group
                        %label.control-label{:for => "name"} Name
                        .controls
                          = f.text_field :name, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "number"} Number
                        .controls
                          = f.text_field :number, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "theme"} Theme
                        .controls
                          = f.text_field :theme, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "part_count"} Part Count
                        .controls
                          = f.text_field :part_count, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "figure_count"} Figure Count
                        .controls
                          = f.text_field :figure_count, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "release_date"} Release Date
                        .controls
                          = f.date_field :release_date, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "retire_date"} Retire Date
                        .controls
                          = f.date_field :retire_date, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "dimensions"} Dimensions
                        .controls
                          = f.text_field :dimensions, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "weight"} Weight
                        .controls
                          = f.text_field :weight, :class => "input-large"
                      .control-group
                        %label.control-label{:for => "tags"} Tags
                        .controls
                          = f.text_field :tags, :value => @catalog_set.tags.map(&:name).join(', '), :class => "input-large"
                      .form-actions
                        = f.submit "Update", class: "btn btn-success"
                  .clearfix
  .clearfix
  = render 'shared/footer'
