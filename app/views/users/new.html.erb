<% provide(:title, "Register") %>
<div class="content">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>
  <!-- Sidebar ends -->
  	<!-- Main bar -->
  	<div class="mainbar">
      
	    <!-- Page heading -->
	    <div class="page-head">
        <!-- Page heading -->
	      <h2 class="pull-left">Register
          <!-- page meta -->
          <span class="page-meta">Something Goes Here</span>
        </h2>


        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="index.html"><i class="icon-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Register</a>
        </div>

        <div class="clearfix"></div>

	    </div>
	    <!-- Page heading ends -->



	    <!-- Matter -->

	    <div class="matter">
        <div class="container-fluid">

          <div class="row-fluid">

            <div class="span12">

              <div class="widget wred">
                <div class="widget-head">
                  <div class="pull-left">Profile</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                  </div>
                  <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                  <div class="padd">
                    
                    <!-- Profile form -->
                   
                      <div class="form profile">
                        <!-- Edit profile form (not working)-->
                        <%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
                            <!-- Name -->
                            <div class="control-group">
                              <label class="control-label" for="user[first_name]">First Name</label>
                              <div class="controls">
                                <%= f.text_field :first_name, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <div class="control-group">
                              <label class="control-label" for="user[last_name]">Last Name</label>
                              <div class="controls">
                                <%= f.text_field :last_name, :html => {:class => "input-large"} %>
                              </div>
                            </div>   
                            <!-- Email -->
                            <div class="control-group">
                              <label class="control-label" for="user[email]">Email</label>
                              <div class="controls">
                                <%= f.email_field :email, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <!-- Telephone -->
                            <div class="control-group">
                              <label class="control-label" for="user[telephone]">Telephone</label>
                              <div class="controls">
                                <%= f.telephone_field :telephone, :html => {:class => "input-large"} %>
                              </div>
                            </div>  
                            <!-- Address -->
                            <div class="control-group">
                              <label class="control-label" for="user[address1]">Address 1</label>
                              <div class="controls">
                                <%= f.text_field :address1, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <div class="control-group">
                              <label class="control-label" for="user[address2]">Address 2</label>
                              <div class="controls">
                                <%= f.text_field :address2, :html => {:class => "input-large"} %>
                              </div>
                            </div>                           
                            <!-- Country -->
                            <div class="control-group">
                              <label class="control-label">Country</label>
                              <div class="controls">  
                                <select name="user[country]">                            
                                 <%= render "shared/country_select" %>
                                </select>
                              </div>
                            </div>  
                            <!-- State -->
                            <div class="control-group">
                              <label class="control-label" for="user[state]">State</label>
                              <div class="controls">
                                <%= f.text_field :state, :html => {:class => "input-large"} %>
                              </div>
                            </div>                                               
                            <!-- City -->
                            <div class="control-group">
                              <label class="control-label" for="user[city]">City</label>
                              <div class="controls">
                                <%= f.text_field :city, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <!-- Zip -->
                            <div class="control-group">
                              <label class="control-label" for="user[zip]">Zip</label>
                              <div class="controls">
                                <%= f.text_field :zip, :html => {:class => "input-large"} %>
                              </div>
                            </div>                                                                                                                                        
                            <!-- Username -->
                            <div class="control-group">
                              <label class="control-label" for="user[username]">Username</label>
                              <div class="controls">
                                <%= f.text_field :username, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <!-- Password -->
                            <div class="control-group">
                              <label class="control-label" for="user[password]">Password</label>
                              <div class="controls">
                                <%= f.password_field :password, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <div class="control-group">
                              <label class="control-label" for="user[password]">Retype Password</label>
                              <div class="controls">
                                <%= f.password_field :password_confirmation, :html => {:class => "input-large"} %>
                              </div>
                            </div>
                            <!-- Checkbox -->
                            <div class="control-group">
                               <div class="controls">
                                  <label class="checkbox inline">
                                     <%= f.check_box :agrees_to_tos %> Agree with Terms and Conditions
                                  </label>
                               </div>
                            </div> 
                            
                            <!-- Buttons -->
                            <div class="form-actions">
                               <!-- Buttons -->
                               <%= f.submit, :as => :button, :html => {:class => "btn btn-success"} %>
                              <button type="reset" class="btn">Reset</button>
                            </div>
                          
                          <% end %>
                      </div>

                  </div>
                </div>
              </div>  
              
            </div>

          </div>

        </div>
		  </div>

		<!-- Matter ends -->

    </div>

   <!-- Mainbar ends -->	    	
   <div class="clearfix"></div>

</div>
<!-- Content ends -->