<% provide(:title, "Register") %>
<div class="content">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>
  <!-- Sidebar ends -->
  	<!-- Main bar -->
  	<div class="mainbar">
      
	    <!-- Page heading -->
	    <div class="page-head">
        <!-- Page heading -->
	      <h2 class="pull-left">Register
          <!-- page meta -->
          <span class="page-meta">Something Goes Here</span>
        </h2>


        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="index.html"><i class="icon-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Register</a>
        </div>

        <div class="clearfix"></div>

	    </div>
	    <!-- Page heading ends -->



	    <!-- Matter -->

	    <div class="matter">
        <div class="container-fluid">

          <div class="row-fluid">

            <div class="span12">

              <div class="widget wred">
                <div class="widget-head">
                  <div class="pull-left">Profile</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                  </div>
                  <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                  <div class="padd">
                    
                    <!-- Profile form -->
                   
                      <div class="form profile">
                        <!-- Edit profile form (not working)-->
                        <%= form_for @user do |f| %>
                        
                            <!-- Name -->
                            <div class="control-group">
                              <label class="control-label" for="name1">First Name</label>
                              <div class="controls">
                                <%= f.text_field :first_name %>
                              </div>
                            </div>   
                            <!-- Email -->
                            <div class="control-group">
                              <label class="control-label" for="email1">Email</label>
                              <div class="controls">
                                <input type="text" class="input-large" id="email1">
                              </div>
                            </div>
                            <!-- Telephone -->
                            <div class="control-group">
                              <label class="control-label" for="telephone">Telephone</label>
                              <div class="controls">
                                <input type="text" class="input-large" id="telephone">
                              </div>
                            </div>  
                            <!-- Address -->
                            <div class="control-group">
                              <label class="control-label" for="address">Address</label>
                              <div class="controls">
                                <textarea class="input-large" id="address"></textarea>
                              </div>
                            </div>                           
                            <!-- Country -->
                            <div class="control-group">
                              <label class="control-label">Country</label>
                              <div class="controls">                               
                                 <%= render "shared/country_select" %>  
                              </div>
                            </div>  
                            <!-- State -->
                            <div class="control-group">
                              <label class="control-label" for="city">State</label>
                              <div class="controls">
                                <input type="text" class="input-large" id="state">
                              </div>
                            </div>                                               
                            <!-- City -->
                            <div class="control-group">
                              <label class="control-label" for="city">City</label>
                              <div class="controls">
                                <input type="text" class="input-large" id="city">
                              </div>
                            </div>                                                                                                                                         
                            <!-- Username -->
                            <div class="control-group">
                              <label class="control-label" for="username2">Username</label>
                              <div class="controls">
                                <input type="text" class="input-large" id="username2">
                              </div>
                            </div>
                            <!-- Password -->
                            <div class="control-group">
                              <label class="control-label" for="password2">Password</label>
                              <div class="controls">
                                <input type="password" class="input-large" id="password2">
                              </div>
                            </div>
                            <!-- Checkbox -->
                            <div class="control-group">
                               <div class="controls">
                                  <label class="checkbox inline">
                                     <input type="checkbox" id="inlineCheckbox3" value="agree"> Agree with Terms and Conditions
                                  </label>
                               </div>
                            </div> 
                            
                            <!-- Buttons -->
                            <div class="form-actions">
                               <!-- Buttons -->
                               <%= f.submit %>
                              <button type="submit" class="btn btn-success">Update</button>
                              <button type="reset" class="btn">Reset</button>
                            </div>
                          
                          <% end %>
                      </div>

                  </div>
                </div>
              </div>  
              
            </div>

          </div>

        </div>
		  </div>

		<!-- Matter ends -->

    </div>

   <!-- Mainbar ends -->	    	
   <div class="clearfix"></div>

</div>
<!-- Content ends -->