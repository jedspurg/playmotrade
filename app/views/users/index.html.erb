<% provide(:title, "Members") %>
<div class="content">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>
  <!-- Sidebar ends -->
  	<div class="mainbar">
      
	    <!-- Page heading -->
	    <div class="page-head">
        <!-- Page heading -->
	      <h2 class="pull-left">Members</h2>


        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="icon-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span>
          <%= link_to "Members", users_path %>
        </div>

        <div class="clearfix"></div>

	    </div>
	    <!-- Page heading ends -->

	    <!-- Matter -->

	    <div class="matter">
        <div class="container-fluid">

          <div class="row-fluid">

            <div class="span12">

                <div class="widget worange">

                <div class="widget-head">

                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">

                    <table class="table  table-bordered ">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>Store</th>
                          <th>Country</th>
                          <th>Member Since</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @users.each do |user| %>
                        <tr>
                          <td><%= user.id %></td>
                          <td>
                            <%= image_tag user.avatar.url(:small) %>&nbsp;&nbsp;
                            <%= link_to "#{user.first_name} #{user.last_name} [ #{user.username} ]", user_path(user) %>
                          </td>
                          <td></td>
                          <td>
                            <%= image_tag "/images/country_icons/#{user.country.id}.png" %>
                            <%= user.country.name %>
                          </td>
                          <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>


                  </div>

                    <div class="widget-foot">
                      <%= will_paginate @users, :class => 'pagination pull-right' %>
                      <div class="clearfix"></div> 
                    </div>

                </div>


              </div>

          </div>

        </div>
		  </div>

		<!-- Matter ends -->

    </div>

   <!-- Mainbar ends -->	    	
   <div class="clearfix"></div>

</div>
<!-- Content ends -->