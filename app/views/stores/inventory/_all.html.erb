<% association = item.class.name.gsub("StoreInventory", "Catalog").underscore.downcase %>
<tr>
  <td><%= image_tag item.send(association).image.url(:small) %></td>
  <td>
    <strong><%= item.send(association).name %></strong><br/>
    <%= item.send(association).number %>
  </td>
  <td class="text-right">
    <form>
      <div class="text-right store-prices">
        <strong>Condition:</strong> <%= item.condition %><br/>
        <strong>Price:</strong> $<%= number_with_precision item.price, :precision => 2 %> each<br/>
        <strong>Quantity Available:</strong> <%= item.quantity %>
      </div>
      <div class="input-append">
        <input type="text" id="item_add_<%= item.id %>" class="span4">
        <button class="btn">Add to Cart</button>
      </div>
    </form>
  </td>
</tr>
