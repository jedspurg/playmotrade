<tr>
  <td><%= image_tag item.catalog_set.image.url(:small) %></td>
  <td>
    <strong><%= item.catalog_set.name %></strong><br/>
    <%= item.catalog_set.number %>
  </td>
  <td class="text-right">
    <div class="text-right store-prices">
      <strong>Condition:</strong> <%= item.condition %><br/>
      <strong>Price:</strong> $<%= number_with_precision item.price, :precision => 2 %> each<br/>
      <strong>Quantity Available:</strong> <%= item.quantity %>
    </div>
    <div class="input-append">
      <%= form_for(@cart_item, :url => {:action => "add_items_to_cart"}) do |f| %>
        <%= f.hidden_field :store_inventory_item_id, :value => item.id %>
        <%= f.hidden_field :store_inventory_item_type, :value => item.class.name.underscore.downcase %>
        <%= f.text_field :quantity, :class => "span4" %>
        <button class="btn btn-success">Add to Cart</button>
      <% end %>
    </div>
  </td>
</tr>
