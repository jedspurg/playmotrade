.span4
  .widget.wlightblue
    .widget-head
      .pull-left
        - if @store.sidebar_title.present?
          = @store.sidebar_title
        - else
          = @store.name
          Resources
      .clearfix
    .widget-content
      .sidebar.sidebar-right
        - if @store.pages.present?
          %ul.navi
            - @store.pages.each do |page|
              %li.ngrey
                = link_to page_url(page.slug, :subdomain => @store.alias) do
                  = page.title
                  %span.pull-right
                    %i.icon-angle-right
    .widget-foot
      .clearfix

