<% if flash[:error].present? %>
  <div class="row-fluid">
    <div class="span12">
      <div class="alert alert-error">
        <%= flash[:error] %>
      </div>
    </div>
  </div>
<% elsif flash[:notice].present? %>
  <div class="row-fluid">
    <div class="span12">
      <div class="alert alert-success">
        <%= flash[:notice]%>
      </div>
    </div>
  </div>
<% end %>
