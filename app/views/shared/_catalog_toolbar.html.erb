<div class="span4">
  <div class="widget wblue">
    <div class="widget-head">
      Tools
      <div class="clearfix"></div>
    </div>
    <div class="widget-content">
      <div class="sidebar sidebar-right">
        <ul class="navi">
          <li class="ngrey">
            <%= link_to edit_catalog_part_path(@catalog_part) do %>
              <i class="icon icon-pencil"></i>Edit Part
              <span class="pull-right"><i class="icon-angle-right"></i></span>
            <% end %>
          </li>
          <% if current_user.try(:store).present? %>
          <li class="ngrey">
            <a href="#addToInventory" data-toggle="modal">
              <i class='icon icon-plus-sign'></i>Add To Store Inventory
              <span class="pull-right"><i class="icon-angle-right"></i></span>
            </a>
          </li>
          <% end %>
          <li class="ngrey">
            <a href="#addToWishlist" data-toggle="modal">
              <i class='icon icon-bookmark'></i>Add To Wishlist
              <span class="pull-right"><i class="icon-angle-right"></i></span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="widget-foot">
      <div class="clearfix"></div>
    </div>
  </div>
</div>

