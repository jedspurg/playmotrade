<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <!-- Menu button for smallar screens -->
      <a class="btn btn-navbar mobile-btn-bar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
      </a>
      <!-- Site name for smallar screens -->
      <a href="/" class="brand">
        <img src="/img/logo.png" alt="Playmotrade - Unofficial Playmobil Marketplace"/>
      </a>

      <!-- Navigation starts -->
      <div class="nav-collapse collapse">        



        <!-- Links -->
        <% if user_signed_in? %>
        <ul class="nav pull-right">
          <li class="dropdown pull-right">            
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
              <%= image_tag current_user.avatar.url(:small) %> <%= current_user.username %> <b class="caret"></b>              
            </a>
            
            <!-- Dropdown menu -->
            <ul class="dropdown-menu">
              
              <li><%= link_to(edit_user_registration_path) do %>
                <i class="icon-user"></i> Edit Settings
                <% end %>
              </li>
              <li><%=link_to(destroy_user_session_path) do %>
                <i class="icon-off"></i> Logout
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
        <% else %>
        <ul class="nav pull-right">
          <li><%= link_to(new_user_session_path) do %>
            <i class="icon-lock"></i> Login
            <% end %>
          </li>
        </ul>
        <% end %>

        <!-- Search Box -->
        <div class="nav pull-right">
          <form class="form-inline">
            <div class="input-append row-fluid">
              <input type="text" class="span8" placeholder="Search">
              <button type="submit" class="btn btn-info">Search</button>
            </div>
          </form>
        </div>

      </div>

    </div>
  </div>
</div>