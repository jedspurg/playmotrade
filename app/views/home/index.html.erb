<% provide(:title, "Home") %>
<div class="content home-content">

  <div class="home-top container-fluid">
    <div class="row-fluid">
      <div class="span12 home-message">
        <h1>Playmotrade is the unofficial Playmobil marketplace.</h1>
        <h2>Creating a store is fast and free. Get started today.</h2>
      </div>
      <div class="span6 span6-fixed">
        <div class="widget wlightblue">
          <div class="widget-head">
            <div class="pull-left">Register</div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content padd">
            <form class="form-inline">
            <input type="text" placeholder="Email">
            <input type="text" placeholder="Username">
            <button type="submit" class="btn btn-primary">Create Account</button>
            </form>
            <div class="clearfix"></div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="home container-fluid">

    <div class="row-fluid">
      <div class="span4">
        <div class="widget wred">
          <div class="widget-head">
            <div class="pull-left">BUY</div>
            <div class="clearfix"></div>
          </div>
         <div class="widget-content">
            <img src="img/home-3.jpg" alt="" width="100%"/>
            <div class="sidebar sidebar-right">
              <ul class="navi">
                <li class="ngrey">
                  <%= link_to catalog_index_path do %>
                    <i class='icon icon-book'></i>Browse Catalog
                    <span class="pull-right"><i class="icon-angle-right"></i></span>
                  <% end %>
                </li>
                <li class="ngrey">
                  <%= link_to stores_path do %>
                    <i class='icon icon-shopping-cart'></i>Browse Stores
                    <span class="pull-right"><i class="icon-angle-right"></i></span>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="span4">
        <div class="widget wviolet">
          <div class="widget-head">
            <div class="pull-left">SELL</div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content">
           <img src="img/home-1.jpg" alt="" width="100%"/>
            <div class="sidebar sidebar-right">
              <ul class="navi">
                <li class="ngrey">
                  <%= link_to new_store_path do %>
                    <i class='icon icon-home'></i>Create a Store
                    <span class="pull-right"><i class="icon-angle-right"></i></span>
                  <% end %>
                </li>
                <li class="ngrey">
                  <a href="#addToWishlist" data-toggle="modal">
                    <i class='icon icon-list'></i>List an Item
                    <span class="pull-right"><i class="icon-angle-right"></i></span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="span4">
        <div class="widget wgreen">
          <div class="widget-head">
            <div class="pull-left">TRADE</div>
            <div class="clearfix"></div>
          </div>
          <div class="widget-content">
            <img src="img/home-2.jpg" alt="" width="100%"/>
            <div class="sidebar sidebar-right">
              <ul class="navi">
               <li class="ngrey">
                  <a href="#addToWishlist" data-toggle="modal">
                    <i class='icon icon-exchange'></i>Browse Trades
                    <span class="pull-right"><i class="icon-angle-right"></i></span>
                  </a>
                </li>
                <li class="ngrey">
                  <a href="#addToWishlist" data-toggle="modal">
                    <i class='icon icon-reorder'></i>Create a Tradelist
                    <span class="pull-right"><i class="icon-angle-right"></i></span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>

  </div>
  <div class="clearfix"></div>
  <%= render 'shared/home_footer' %>
</div>

